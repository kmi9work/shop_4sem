<%= javascript_include_tag :defaults %>
<% form_tag({:action => :list}, {:name => 'items_form'}) do %>
<TABLE class = "top">
  <tr><th> Лучшие товары:</th>
  <% @bests.each do |best| %>
    <td><%= link_to best.name, :action => :show, :id => best.id, :catalogue_id => params['catalogue_id']%></td>
  <% end %>
  </tr>
</table>
<TABLE class = "list">
  <CAPTION>
    Каталог товаров:
    <%= catalogues_list(params['catalogue_id'], 'catalogue_id',
      'javascript:document.items_form.submit();') %>
  </CAPTION>
  <% if @items.size == 0 %>
    <%=  empty_list() %>
  <% else %>
    <THEAD>
      <TR>
        <TH>Название</TH>
        <% if @inline_actions.size > 0  %>
        <TH>Действия</TH>
        <% end %>
        <th>Цена</th>
        <th>Количество</th>
      </TR>
    </THEAD>
    <TBODY>
      <% @items.each do |item| %>
      <TR>
        <TD><%= item.name %></TD>
        <td><%= inline_menu(item) %> <%= content_tag(:span, 
                                          link_to_remote("Купить", :update => "quantity#{item.id}", 
                                          :url => {:action => :buy, :id => item.id}), 
                                          :class => 'inline-menu-item') if @user == 'anonimus'%></td>
        <td>
          <%= item.price ? "#{item.price} руб." : "Уточните у менеджера" %> 
        </td>
        <td>
          <span id="quantity<%=item.id%>"><%= item.quantity or "Нет в наличии"%></span>
        </td>
      </TR>
      <% end %>
    </TBODY>
  <% end %>
</TABLE>
<% end %>
<table class = "edit">
  <caption>Просмотр товара</caption>
  <thead>
    <tr>
      <th colspan = "2">
        <div class = "button-link">
          <span>
            <%= link_to('Вернуться в список товаров', :action => :list,
              :catalogue_id => params['catalogue_id'] ? params['catalogue_id'] : @item.catalogue_id) %>
          </span>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Название товара:</th>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <th>Размеры товара:</th>
      <td>
        <%= @item.size_x %> мм X
        <%= @item.size_y %> мм X
        <%= @item.size_z %> мм
      </td>
    </tr>
    <tr>
      <th>Вес товара:</th>
      <td><%= @item.weight %> кг</td>
    </tr>
    <% @item.properties.each do |property| %>
    <tr>
      <th><%= property[:key] %></th>
      <td><%= property[:value] %></td>
    </tr>
    <% end %>
    <tr>
      <th>Каталог:</th>
      <td><%= @item.catalogue_name() %></td>
    </tr>
    <tr>
      <th>Цена(полная, скидка, с учётом скидки):</th>
      <td><%= @item.price ? "#{@item.price} руб. | #{@item[:discount] or "0"}% | #{@item[:price] or @item.price} руб." : "Уточните у менеджера" %></td>
    </tr>
    <tr>
      <th>Количество товара:</th>
      <td><%= @item.quantity() %></td>
    </tr>
    <tr>
      <th>Рейтинг:</th>
      <td><span id="rating<%=@item.id%>"><%= @item.rating %></span> | 
        <div class="plus"><%= link_to_remote image_tag("up.png"), 
                              :update => "rating#{@item.id}", 
                              :url => {:action => :plus, :id => @item.id}%></div> 
        <div class="plus"><%= link_to_remote image_tag("down.png"), 
                              :update => "rating#{@item.id}", 
                              :url => {:action => :minus, :id => @item.id}%></div>
      </td>
    </tr>
  </tbody>
</table>
